<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BrooklinClusterDao">
  <resultMap id="BrooklinClusterMap" type="com.xiaojukeji.kafka.manager.common.entity.pojo.BrooklinClusterDO">
    <id column="id"                       property="id" />
    <id column="status"                   property="status" />
    <result column="gmt_create"           property="gmtCreate" />
    <result column="gmt_modify"           property="gmtModify" />
    <result column="cluster_name"         property="clusterName" />
    <result column="zookeeper"            property="zookeeper" />
    <result column="brooklin_servers"    property="brooklinServers" />
    <result column="jmx_properties"       property="jmxProperties" />
  </resultMap>

  <insert id="insert"
          parameterType="com.xiaojukeji.kafka.manager.common.entity.pojo.BrooklinClusterDO"
          useGeneratedKeys="true"
          keyProperty="id">
    INSERT INTO brooklin_cluster (
      cluster_name, zookeeper, brooklin_servers, jmx_properties
    ) VALUES (
      #{clusterName}, #{zookeeper}, #{brooklinServers},  #{jmxProperties}
    )
  </insert>

  <update id="updateById" parameterType="com.xiaojukeji.kafka.manager.common.entity.pojo.ClusterDO">
    UPDATE brooklin_cluster SET
      cluster_name=#{clusterName},
      bootstrap_servers=#{bootstrapServers},
      jmx_properties=#{jmxProperties},
      status=#{status}
    WHERE id = #{id}
  </update>

  <select id="getById" parameterType="java.lang.Long" resultMap="BrooklinClusterMap">
    SELECT * FROM brooklin_cluster where id=#{id}
  </select>

  <delete id="deleteById" parameterType="java.lang.Long">
    DELETE FROM brooklin_cluster where id=#{id}
  </delete>

  <select id="list" resultMap="BrooklinClusterMap">
    SELECT * FROM brooklin_cluster WHERE status = 1
  </select>

  <select id="listAll" resultMap="BrooklinClusterMap">
    SELECT * FROM brooklin_cluster ORDER BY status DESC
  </select>
</mapper>
